<div class="container" style="margin-top:100px;">
    <div class="row">
        <form action="/admin/productos/agregar" method="post"
        enctype="multipart/form-data">
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Producto" name="name">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Marca" name="title">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <textarea type="text" class="form-control" placeholder="Descripción (Máximo 80 caracteres)" name="description"></textarea>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="number" class="form-control" placeholder="Stock" name="stock">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="number" class="form-control" placeholder="Precio" name="price">
                </div>
            </div>
            <div class="mb-3 row">
                <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
        {{#if error}}
            <p>{{message}}</p>
        {{/if}}
    </div>
</div>