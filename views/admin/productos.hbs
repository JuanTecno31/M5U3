<div class="container" style="margin-top: 50px">
    <div class="row">
        <p class="text-end">¡ Hola {{persona}} ! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesión <i
                    class="fas fa-sign-out-alt"></i></a></p>
    </div>


    <div class="row">
        <div class="col-7">
            <h3>Listado de productos</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/productos/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Marca</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Precio</th>
                        <th scope="text-end">Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{name}}</td>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>{{stock}}</td>
                        <td>{{price}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/productos/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i> </a>
                            <a class="btn btn-secondary" href="/admin/productos/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i> </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>