<div class="container" style="margin-top: 50px">
    <div class="row">
        <p class="text-end">¡ Hola {{persona}} ! <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesión <i
                    class="fas fa-sign-out-alt"></i></a></p>
    </div>


    <div class="row">
        <div class="col-7">
            <h3>Listado de productos</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/productos/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="text-center">#</th>
                        <th scope="col" class="text-center">Producto</th>
                        <th scope="col" class="text-center">Marca</th>
                        <th scope="col" class="text-center">Descripción</th>
                        <th scope="col" class="text-center">Stock</th>
                        <th scope="col" class="text-center">Precio</th>
                        <th scope="col" class="text-center">Imagen</th>
                        <th class="text-end"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <th scope="row" class="text-center">{{id}}</th>
                        <td class="text-center">{{name}}</td>
                        <td class="text-center">{{title}}</td>
                        <td class="text-center">{{description}}</td>
                        <td class="text-center">{{stock}}</td>
                        <td class="text-center">{{price}}</td>
                        <td class="text-center">{{{imagen}}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/productos/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i> </a>
                            <a class="btn btn-secondary" href="/admin/productos/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i> </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>